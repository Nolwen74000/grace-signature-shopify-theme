<style>
  .chapter-intro {
    background-color: var(--primary);
    padding: 6rem 2rem;
  }
  
  @media (min-width: 768px) {
    .chapter-intro {
      padding: 8rem 4rem;
    }
  }
  
  @media (min-width: 1024px) {
    .chapter-intro {
      padding: 10rem 6rem;
    }
  }
  
  .chapter-intro-inner {
    max-width: 56rem;
    margin: 0 auto;
    text-align: center;
  }
  
  .chapter-divider {
    width: 1px;
    height: 6rem;
    background-color: hsl(var(--primary-foreground-hsl) / 0.5);
    margin: 0 auto 4rem;
    transform-origin: top;
    opacity: 0;
    transform: scaleY(0);
  }
  
  .chapter-divider.visible {
    opacity: 1;
    animation: scaleY 1s ease-out forwards;
  }
  
  @media (min-width: 768px) {
    .chapter-divider {
      height: 8rem;
    }
  }
  
  .chapter-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.875rem;
    letter-spacing: 0.15em;
    color: var(--primary-foreground);
    margin-bottom: 3rem;
    opacity: 0;
  }
  
  .chapter-title.visible {
    animation: fadeInUp 1s ease-out 0.3s forwards;
  }
  
  @media (min-width: 768px) {
    .chapter-title {
      font-size: 2.25rem;
    }
  }
  
  @media (min-width: 1024px) {
    .chapter-title {
      font-size: 3rem;
    }
  }
  
  .chapter-text {
    color: rgba(248, 245, 240, 0.8);
    font-size: 1.125rem;
    line-height: 1.75;
    margin-bottom: 4rem;
    opacity: 0;
  }
  
  .chapter-text.visible {
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }
  
  @media (min-width: 768px) {
    .chapter-text {
      font-size: 1.25rem;
    }
  }
  
  @media (min-width: 1024px) {
    .chapter-text {
      font-size: 1.5rem;
    }
  }
  
  .chapter-text p {
    margin: 0;
  }
  
  .chapter-divider-bottom {
    width: 1px;
    height: 6rem;
    background-color: hsl(var(--primary-foreground-hsl) / 0.5);
    margin: 0 auto;
    transform-origin: top;
    opacity: 0;
    transform: scaleY(0);
  }
  
  .chapter-divider-bottom.visible {
    opacity: 1;
    animation: scaleY 1s ease-out 0.7s forwards;
  }
  
  @media (min-width: 768px) {
    .chapter-divider-bottom {
      height: 8rem;
    }
  }
</style>

<section class="chapter-intro" id="chapterIntro">
  <div class="chapter-intro-inner">
    
    <div class="chapter-divider animate-on-scroll" id="dividerTop"></div>
    
    <h2 class="chapter-title animate-on-scroll">{{ section.settings.title | default: 'Raissa Morelli & Co' }}</h2>
    
    <div class="chapter-text animate-on-scroll">
      <p>{{ section.settings.line_1 | default: "Une maison de création issue d'un parcours d'affinement," }}</p>
      <p>{{ section.settings.line_2 | default: "menant naturellement vers l'essence," }}</p>
      <p>{{ section.settings.line_3 | default: "sans jamais renoncer à l'élégance." }}</p>
    </div>
    
    <div class="chapter-divider-bottom animate-on-scroll" id="dividerBottom"></div>
    
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.2, rootMargin: '-100px' });
    
    document.querySelectorAll('#chapterIntro .animate-on-scroll').forEach(function(el) {
      observer.observe(el);
    });
  });
</script>

{% schema %}
{
  "name": "Chapter Intro",
  "tag": "section",
  "class": "chapter-intro-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Raissa Morelli & Co"
    },
    {
      "type": "text",
      "id": "line_1",
      "label": "Line 1",
      "default": "Une maison de création issue d'un parcours d'affinement,"
    },
    {
      "type": "text",
      "id": "line_2",
      "label": "Line 2",
      "default": "menant naturellement vers l'essence,"
    },
    {
      "type": "text",
      "id": "line_3",
      "label": "Line 3",
      "default": "sans jamais renoncer à l'élégance."
    }
  ],
  "presets": [
    {
      "name": "Chapter Intro"
    }
  ]
}
{% endschema %}
