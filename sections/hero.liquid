<style>
  .hero-section {
    position: relative;
    height: 100vh;
    height: 100svh;
    width: 100%;
    overflow: hidden;
  }
  
  .hero-video-container {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .hero-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 50%;
  }
  
  .hero-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 50%;
  }
  
  .hero-video-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(10, 10, 10, 0.05) 0%,
      transparent 50%,
      rgba(10, 10, 10, 0.25) 100%
    );
  }
  
  .hero-content {
    position: relative;
    z-index: 20;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0 1.5rem;
    opacity: 0;
    animation: fadeIn 1s ease-out 0.3s forwards;
  }
  
  .hero-content.fade-out {
    animation: fadeOut 1.2s ease-out forwards;
  }
  
  .hero-maison {
    font-size: 0.6875rem;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    color: rgba(248, 245, 240, 0.9);
    margin-bottom: 1.5rem;
    opacity: 0;
    animation: fadeInUp 1s ease-out 0.35s forwards;
  }
  
  @media (min-width: 768px) {
    .hero-maison {
      font-size: 0.75rem;
    }
  }
  
  .hero-title-container {
    overflow: hidden;
  }
  
  .hero-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 3rem;
    letter-spacing: 0.1em;
    color: var(--primary-foreground);
    transform: translateY(100%);
    animation: slideUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.5s forwards;
  }
  
  @media (min-width: 768px) {
    .hero-title {
      font-size: 4.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-title {
      font-size: 6rem;
    }
  }
  
  .hero-subtitle-container {
    overflow: hidden;
    margin-top: 0.5rem;
  }
  
  .hero-subtitle {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.5rem;
    letter-spacing: 0.3em;
    color: rgba(248, 245, 240, 0.9);
    transform: translateY(100%);
    animation: slideUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.7s forwards;
  }
  
  @media (min-width: 768px) {
    .hero-subtitle {
      font-size: 1.875rem;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-subtitle {
      font-size: 2.25rem;
    }
  }
  
  .hero-tagline {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-style: italic;
    font-size: 1.125rem;
    color: rgba(248, 245, 240, 0.85);
    margin-top: 2rem;
    margin-bottom: 4rem;
    opacity: 0;
    animation: fadeIn 1.4s ease-out 1s forwards;
  }
  
  @media (min-width: 768px) {
    .hero-tagline {
      font-size: 1.25rem;
    }
  }
  
  .hero-scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    opacity: 0;
    animation: fadeIn 1s ease-out 1.8s forwards;
    pointer-events: none;
  }
  
  .hero-scroll-text {
    font-size: 0.625rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(248, 245, 240, 0.8);
  }
  
  .hero-scroll-line {
    width: 1px;
    height: 2.5rem;
    background: linear-gradient(to bottom, rgba(248, 245, 240, 0.7), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }
</style>

<section id="hero" class="hero-section">
  <div class="hero-video-container">
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag: 
        autoplay: true,
        muted: true,
        loop: true,
        playsinline: true,
        controls: false,
        preload: 'auto',
        class: 'hero-video',
        image_size: '1920x'
      }}
    {% elsif section.settings.video_url != blank %}
      <video 
        autoplay 
        muted 
        loop 
        playsinline 
        preload="auto" 
        class="hero-video"
        poster="{{ section.settings.image | image_url: width: 1920 }}"
      >
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {% elsif section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | image_url: width: 1920 }}" 
        alt="{{ section.settings.image.alt | default: 'Hero background' }}"
        class="hero-image"
      >
    {% else %}
      <div style="background: linear-gradient(135deg, hsl(0, 0%, 8%) 0%, hsl(0, 0%, 4%) 100%); width: 100%; height: 100%;"></div>
    {% endif %}
    <div class="hero-video-overlay"></div>
  </div>
  
  <div class="hero-content" id="heroContent">
    <p class="hero-maison">{{ section.settings.maison_text | default: 'Maison Créative' }}</p>
    
    <div class="hero-title-container">
      <h1 class="hero-title">{{ section.settings.title | default: 'R. Morelli' }}</h1>
    </div>
    
    <div class="hero-subtitle-container">
      <span class="hero-subtitle">{{ section.settings.subtitle | default: '& Co' }}</span>
    </div>
    
    <p class="hero-tagline">{{ section.settings.tagline | default: 'Une vision. Une signature. Une maison.' }}</p>
  </div>
  
  <div class="hero-scroll" id="heroScroll">
    <span class="hero-scroll-text">{{ section.settings.scroll_text | default: 'Découvrir' }}</span>
    <div class="hero-scroll-line"></div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      const heroContent = document.getElementById('heroContent');
      const heroScroll = document.getElementById('heroScroll');
      if (heroContent) heroContent.classList.add('fade-out');
      if (heroScroll) heroScroll.style.animation = 'fadeOut 1.2s ease-out forwards';
    }, 5200);
  });
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "maison_text",
      "label": "Maison Text",
      "default": "Maison Créative"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "R. Morelli"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "& Co"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Une vision. Une signature. Une maison."
    },
    {
      "type": "text",
      "id": "scroll_text",
      "label": "Scroll Text",
      "default": "Découvrir"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background Video (Shopify hosted)"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL (externe MP4)",
      "info": "URL directe vers un fichier MP4 (ex: hébergé sur un CDN)"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image (fallback/poster)"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
