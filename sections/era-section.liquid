<style>
  .era-section {
    background-color: var(--primary);
    min-height: 100vh;
  }
  
  .era-header {
    padding: 6rem 2rem;
  }
  
  @media (min-width: 768px) {
    .era-header {
      padding: 8rem 4rem;
    }
  }
  
  .era-chapter-line {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
    opacity: 0;
  }
  
  .era-chapter-line.visible {
    animation: fadeIn 1s ease-out forwards;
  }
  
  .era-chapter-number {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    color: rgba(248, 245, 240, 0.6);
  }
  
  .era-chapter-divider {
    flex: 1;
    height: 1px;
    background-color: rgba(248, 245, 240, 0.4);
    min-width: 100px;
  }
  
  .era-title-container {
    overflow: hidden;
  }
  
  .era-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 4.5rem;
    letter-spacing: 0.2em;
    color: var(--primary-foreground);
    line-height: 1;
    opacity: 0;
    transform: translateY(30px);
  }
  
  .era-title.visible {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 1s ease-out 0.2s, transform 1s cubic-bezier(0.16, 1, 0.3, 1) 0.2s;
  }
  
  @media (min-width: 768px) {
    .era-title {
      font-size: 8rem;
    }
  }
  
  @media (min-width: 1024px) {
    .era-title {
      font-size: 10rem;
    }
  }
  
  @media (min-width: 1280px) {
    .era-title {
      font-size: 12rem;
    }
  }
  
  .era-content {
    padding: 0 2rem 6rem;
  }
  
  @media (min-width: 768px) {
    .era-content {
      padding: 0 4rem 8rem;
    }
  }
  
  .era-grid {
    display: grid;
    gap: 4rem;
  }
  
  @media (min-width: 1024px) {
    .era-grid {
      grid-template-columns: 1fr 1fr;
      gap: 6rem;
    }
  }
  
  .era-image {
    position: relative;
    aspect-ratio: 3/4;
    background-color: rgba(248, 245, 240, 0.05);
    overflow: hidden;
    opacity: 0;
  }
  
  .era-image.visible {
    animation: fadeIn 1.5s ease-out forwards;
  }

  /* ✅ lien invisible sur toute l'image */
  .era-image a {
    position: absolute;
    inset: 0;
    display: block;
    z-index: 6;
    cursor: pointer;
    text-decoration: none;
  }

  /* ✅ image : hover zoom + ne bloque pas le clic */
  .era-image img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1);
    transition: transform 0.4s ease;
    pointer-events: none;
    z-index: 1;
  }

  @media (hover: hover) and (pointer: fine) {
    .era-image:hover img {
      transform: scale(1.06);
    }
  }

  .era-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent, rgba(248, 245, 240, 0.05), rgba(248, 245, 240, 0.1));
    pointer-events: none;
    z-index: 3;
  }
  
  .era-image-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  
  .era-placeholder-content {
    text-align: center;
  }
  
  .era-placeholder-line {
    width: 1px;
    height: 8rem;
    background-color: rgba(248, 245, 240, 0.2);
    margin: 0 auto 2rem;
    transform-origin: top;
    transform: scaleY(0);
  }
  
  .era-placeholder-line.visible {
    animation: scaleY 1s ease-out 0.5s forwards;
  }
  
  .era-placeholder-text {
    font-size: 0.75rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(248, 245, 240, 0.3);
  }
  
  .era-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .era-label {
    font-size: 0.75rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: rgba(248, 245, 240, 0.7);
    margin-bottom: 2rem;
    opacity: 0;
  }
  
  .era-label.visible {
    animation: fadeInUp 1s ease-out 0.4s forwards;
  }
  
  .era-heading {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.5rem;
    line-height: 1.5;
    color: var(--primary-foreground);
    margin-bottom: 1.5rem;
    opacity: 0;
  }
  
  .era-heading.visible {
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }
  
  @media (min-width: 768px) {
    .era-heading {
      font-size: 1.875rem;
    }
  }
  
  .era-description {
    font-size: 1.125rem;
    color: rgba(248, 245, 240, 0.8);
    margin-bottom: 3rem;
    opacity: 0;
  }
  
  .era-description.visible {
    animation: fadeInUp 1s ease-out 0.6s forwards;
  }
  
  @media (min-width: 768px) {
    .era-description {
      font-size: 1.25rem;
    }
  }
  
  .era-keywords {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 3rem;
    opacity: 0;
  }
  
  .era-keywords.visible {
    animation: fadeInUp 1s ease-out 0.7s forwards;
  }
  
  /* ✅ mêmes “petites cases” mais cliquables si lien */
  .era-keyword {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(248, 245, 240, 0.6);
    border: 1px solid rgba(248, 245, 240, 0.3);
    padding: 0.5rem 1rem;
    text-decoration: none;
    display: inline-block;
    transition: border-color .25s ease, color .25s ease, transform .25s ease;
  }

  .era-keyword:hover {
    border-color: rgba(248, 245, 240, 0.6);
    color: rgba(248, 245, 240, 0.9);
    transform: translateY(-1px);
  }
  
  .era-cta {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--primary-foreground);
    text-decoration: none;
    background: none;
    border: none;
    cursor: pointer;
    opacity: 0;
  }
  
  .era-cta.visible {
    animation: fadeInUp 1s ease-out 0.8s forwards;
  }
  
  .era-cta:hover .era-arrow {
    transform: translateX(8px);
  }
  
  .era-arrow {
    transition: transform 0.3s ease-out;
  }
  
  .era-quote {
    padding: 4rem 2rem 6rem;
    border-top: 1px solid rgba(248, 245, 240, 0.2);
  }
  
  @media (min-width: 768px) {
    .era-quote {
      padding: 4rem 4rem 8rem;
    }
  }
  
  .era-quote-text {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-style: italic;
    font-size: 1.25rem;
    color: rgba(248, 245, 240, 0.7);
    text-align: center;
    max-width: 48rem;
    margin: 0 auto;
    opacity: 0;
  }
  
  .era-quote-text.visible {
    animation: fadeIn 1.5s ease-out forwards;
  }
  
  @media (min-width: 768px) {
    .era-quote-text {
      font-size: 1.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .era-quote-text {
      font-size: 1.875rem;
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(12px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes scaleY {
    from { transform: scaleY(0); }
    to { transform: scaleY(1); }
  }
</style>

<section id="era" class="era-section">
  
  <div class="era-header">
    <div class="era-chapter-line animate-on-scroll">
      <span class="era-chapter-number">{{ section.settings.chapter | default: 'CHAPITRE II' }}</span>
      <div class="era-chapter-divider"></div>
    </div>
    
    <div class="era-title-container">
      <h2 class="era-title animate-on-scroll">{{ section.settings.title | default: 'ERA' }}</h2>
    </div>
  </div>
  
  <div class="era-content">
    <div class="era-grid">
      
      <div class="era-image animate-on-scroll">
        {%- if section.settings.image_link != blank -%}
          <a href="{{ section.settings.image_link }}" aria-label="{{ section.settings.image_label | default: 'Silhouettes' | escape }}"></a>
        {%- endif -%}

        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="{{ section.settings.image.alt | default: 'ERA' | escape }}">
          <div class="era-image-overlay"></div>
        {% else %}
          <div class="era-image-overlay"></div>
          <div class="era-image-placeholder">
            <div class="era-placeholder-content">
              <div class="era-placeholder-line animate-on-scroll"></div>
              <span class="era-placeholder-text">{{ section.settings.image_label | default: 'Silhouettes' }}</span>
            </div>
          </div>
        {% endif %}
      </div>
      
      <div class="era-text">
        <p class="era-label animate-on-scroll">{{ section.settings.label | default: 'Vêtements essentiels' }}</p>
        
        <h3 class="era-heading animate-on-scroll">{{ section.settings.heading | default: 'ERA incarne une allure essentielle, pensée pour traverser le temps.' }}</h3>
        
        <p class="era-description animate-on-scroll">{{ section.settings.description | default: 'Une élégance sobre, maîtrisée, libérée de tout superflu.' }}</p>
        
        <div class="era-keywords animate-on-scroll">
          {%- assign tag_blocks = section.blocks | where: 'type', 'tag' -%}
          {%- if tag_blocks.size > 0 -%}
            {%- for block in tag_blocks -%}
              {%- assign tag_text = block.settings.text | default: 'ESSENTIEL' -%}
              {%- assign tag_link = block.settings.link -%}
              {%- if tag_link != blank -%}
                <a class="era-keyword" href="{{ tag_link }}" {{ block.shopify_attributes }}>
                  {{ tag_text }}
                </a>
              {%- else -%}
                <span class="era-keyword" {{ block.shopify_attributes }}>
                  {{ tag_text }}
                </span>
              {%- endif -%}
            {%- endfor -%}
          {%- else -%}
            {%- assign keywords = section.settings.keywords | default: 'Essentiel, Intemporel, Élégance, Maîtrise' | split: ', ' -%}
            {%- for keyword in keywords -%}
              <span class="era-keyword">{{ keyword }}</span>
            {%- endfor -%}
          {%- endif -%}
        </div>
        
        <a href="{{ section.settings.cta_link | default: '/collections/era' }}"
           class="era-cta link-luxury animate-on-scroll">
          <span>{{ section.settings.cta_text | default: 'Découvrir ERA' }}</span>
          <span class="era-arrow">→</span>
        </a>
      </div>
      
    </div>
  </div>
  
  <div class="era-quote">
    <p class="era-quote-text animate-on-scroll">"{{ section.settings.quote | default: "Le vêtement n'habille pas. Il libère." }}"</p>
  </div>
  
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1, rootMargin: '-50px' });
    
    document.querySelectorAll('#era .animate-on-scroll').forEach(function(el) {
      observer.observe(el);
    });
  });
</script>

{% schema %}
{
  "name": "ERA Section",
  "tag": "section",
  "class": "era-section-wrapper",
  "settings": [
    { "type": "text", "id": "chapter", "label": "Chapitre", "default": "CHAPITRE II" },
    { "type": "text", "id": "title", "label": "Section Title", "default": "ERA" },
    { "type": "text", "id": "label", "label": "Label", "default": "Vêtements essentiels" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "ERA incarne une allure essentielle, pensée pour traverser le temps." },
    { "type": "text", "id": "description", "label": "Description", "default": "Une élégance sobre, maîtrisée, libérée de tout superflu." },

    { "type": "text", "id": "keywords", "label": "Keywords (fallback, comma separated)", "default": "Essentiel, Intemporel, Élégance, Maîtrise" },

    { "type": "text", "id": "cta_text", "label": "CTA Text", "default": "Découvrir ERA" },
    { "type": "url", "id": "cta_link", "label": "CTA Link" },

    { "type": "text", "id": "quote", "label": "Quote", "default": "Le vêtement n'habille pas. Il libère." },

    { "type": "image_picker", "id": "image", "label": "Image (Silhouettes)" },
    { "type": "text", "id": "image_label", "label": "Texte (Silhouettes)", "default": "SILHOUETTES" },
    { "type": "url", "id": "image_link", "label": "Lien de l'image (vers produit/collection)" }
  ],
  "blocks": [
    {
      "type": "tag",
      "name": "Tag (case)",
      "settings": [
        { "type": "text", "id": "text", "label": "Texte", "default": "ESSENTIEL" },
        { "type": "url", "id": "link", "label": "Lien (produit/collection)" }
      ]
    }
  ],
  "presets": [
    {
      "name": "ERA Section",
      "blocks": [
        { "type": "tag", "settings": { "text": "ESSENTIEL" } },
        { "type": "tag", "settings": { "text": "INTEMPOREL" } },
        { "type": "tag", "settings": { "text": "ÉLÉGANCE" } },
        { "type": "tag", "settings": { "text": "MAÎTRISE" } }
      ]
    }
  ]
}
{% endschema %}
